%h1{ class: "page-header" }
  %div{ class: "pull-left" }
    %h1 Edit #{ resource_name }

%div{ class: "breadcrumbs" }
  %ul
    %li
      = link_to "Home", admin_root_path
      = icon("angle-right")
    %li
      = link_to collection_name, collection_path
      = icon("angle-right")
    %li
      = link_to "Edit #{ resource_name }", new_resource_path

%div{ class: "row-fluid" }
  %div{ class: "span12" }
    %div{ class: "box" }
      %div{ class: "box-title" }
        %h3
          %i{ class: "icon-edit" }
          %span Edit #{ resource_name }
      %div{ class: "box-content" }
        = body
